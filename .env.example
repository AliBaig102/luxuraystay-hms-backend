# =============================================================================
# LuxuryStay HMS Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit the actual .env file to version control

# =============================================================================
# Server Configuration
# =============================================================================
NODE_ENV=development
PORT=5000
PROJECT_VERSION=v1

# =============================================================================
# Database Configuration
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/luxuraystay_hms
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/luxuraystay_hms

# =============================================================================
# JWT Configuration
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-here
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# Email Configuration (NodeMailer)
# =============================================================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Alternative: Gmail OAuth2 (if using OAuth2)
# GMAIL_CLIENT_ID=your-gmail-client-id
# GMAIL_CLIENT_SECRET=your-gmail-client-secret
# GMAIL_REFRESH_TOKEN=your-gmail-refresh-token

# Alternative: SendGrid
# SENDGRID_API_KEY=your-sendgrid-api-key
# SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# Alternative: AWS SES
# AWS_SES_ACCESS_KEY_ID=your-aws-access-key
# AWS_SES_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_SES_REGION=us-east-1
# AWS_SES_FROM_EMAIL=noreply@yourdomain.com

# =============================================================================
# Frontend Configuration
# =============================================================================
FRONTEND_URL=http://localhost:3000
FRONTEND_URL_PROD=https://yourdomain.com

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
CORS_CREDENTIALS=true

# =============================================================================
# Security Configuration
# =============================================================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
HELMET_ENABLED=true

# =============================================================================
# File Upload Configuration
# =============================================================================
# Local file storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Alternative: AWS S3
# AWS_S3_BUCKET=your-s3-bucket-name
# AWS_S3_ACCESS_KEY_ID=your-aws-access-key
# AWS_S3_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_S3_REGION=us-east-1

# Alternative: Cloudinary
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# =============================================================================
# Redis Configuration (for caching and sessions)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# Payment Gateway Configuration (if needed in future)
# =============================================================================
# Stripe
# STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
# STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
# STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# PayPal
# PAYPAL_CLIENT_ID=your-paypal-client-id
# PAYPAL_CLIENT_SECRET=your-paypal-client-secret
# PAYPAL_MODE=sandbox

# =============================================================================
# Third-Party API Keys
# =============================================================================
# Google Maps/Places API
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Twilio (for SMS notifications)
# TWILIO_ACCOUNT_SID=your-twilio-account-sid
# TWILIO_AUTH_TOKEN=your-twilio-auth-token
# TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# Monitoring and Analytics
# =============================================================================
# Sentry (error tracking)
# SENTRY_DSN=your-sentry-dsn

# Google Analytics
# GA_TRACKING_ID=your-ga-tracking-id

# =============================================================================
# Development and Testing
# =============================================================================
# Test database
MONGODB_URI_TEST=mongodb://localhost:27017/luxuraystay_hms_test

# Test email configuration
SMTP_TEST_HOST=smtp.mailtrap.io
SMTP_TEST_PORT=2525
SMTP_TEST_USER=your-mailtrap-user
SMTP_TEST_PASS=your-mailtrap-pass

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
ENABLE_WEBHOOKS=true
ENABLE_ANALYTICS=false
ENABLE_MAINTENANCE_MODE=false

# =============================================================================
# Timezone and Locale
# =============================================================================
TZ=UTC
LOCALE=en-US

# =============================================================================
# Backup and Maintenance
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# WebSocket Configuration
# =============================================================================
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000
WS_CORS_ORIGIN=http://localhost:3000

# =============================================================================
# Inventory Management
# =============================================================================
INVENTORY_LOW_STOCK_THRESHOLD=10
INVENTORY_CRITICAL_STOCK_THRESHOLD=5
INVENTORY_ALERT_EMAIL_ENABLED=true

# =============================================================================
# Notification Configuration
# =============================================================================
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SMS_ENABLED=false
NOTIFICATION_PUSH_ENABLED=false
NOTIFICATION_RETENTION_DAYS=90

# =============================================================================
# Rate Limiting for Specific Endpoints
# =============================================================================
AUTH_RATE_LIMIT_MAX=5
AUTH_RATE_LIMIT_WINDOW_MS=900000
EMAIL_RATE_LIMIT_MAX=10
EMAIL_RATE_LIMIT_WINDOW_MS=3600000

# =============================================================================
# Session Configuration
# =============================================================================
SESSION_SECRET=your-super-secret-session-key
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_MAX_AGE=86400000

# =============================================================================
# API Documentation
# =============================================================================
SWAGGER_ENABLED=true
SWAGGER_TITLE=LuxuryStay HMS API
SWAGGER_VERSION=1.0.0
SWAGGER_DESCRIPTION=Hotel Management System API Documentation

# =============================================================================
# Health Check Configuration
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# Example Usage:
# =============================================================================
# 1. Copy this file to .env
# 2. Fill in your actual values
# 3. Never commit .env to version control
# 4. Use different values for development, staging, and production
# 5. Keep sensitive keys secure and rotate them regularly
